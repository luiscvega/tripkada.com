<br />
<div class="row">
  <div class="span6">
    <img class="img-polaroid" src="/img/{{ pin.deal.photo }}.jpg">
  </div>
  <div class="span6">
    <h1>{{ pin.deal.name }}</h1>
    <p>{{ pin.deal.description }}</p>
    <dl class="dl-horizontal">
      <dt>Number of Persons</dt>
      <dd>{{ pin.deal.pax }}</dd>
      <dt>Cost</dt>
      <dd>{{ this.money(pin.deal.cost) }}</dd>
    </dl>
  </div>
</div>
